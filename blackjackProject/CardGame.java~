  public static int calcScore(ArrayList<Card> hand){
    Scanner aceHandler = new Scanner(System.in);
    int sum = 0;
    boolean countedAce = false;
    
    for (Card c : hand){
      if (!c.getCardValue().getFace().equals("A")){
      sum += c.getCardValue().getNumeric();
      }
      else{
        if (sum >= 11){
          sum += 1;
        }
        
        else {
          System.out.println("Do you want 1 or 10 for ace? \n Enter '1' or '11'");
          String answer = aceHandler.nextLine();
          
          if(answer.equals("1")){
            sum+=1;
            countedAce = true;
          }
          else if (answer.equals("11")){
            sum+=11;
            countedAce = true;
          }
        }
        
      }
    }
    return sum;
  }
  
  public static void hit(ArrayList<Card> hand){
    Card c = new Card();
    if (!hand.contains(c)){
      hand.add(c);
    }
  }
  
  public static boolean isBusted(ArrayList<Card> hand){
    if(calcScore(hand) > 21)
      return true;
    else{
      return false;
    }
  }
  
  public static void main(String[] args){
    Scanner in = new Scanner(System.in);
    System.out.println("Welcome to Blackjack!");
    ArrayList<Card> hand = new ArrayList<Card>();
    dealIn(hand);
    System.out.println(hand);
    
    while (!isBusted(hand)){
    System.out.println("Your score is " + calcScore(hand) + ". Hit or stay?");
    String hOrS = in.nextLine();
    
    if (hOrS.equalsIgnoreCase("hit")){
      hit(hand);
      System.out.println(hand);
    
    }
    if (hOrS.equalsIgnoreCase("stay")){
      
      break;
    
    }
    }
    
    
    
  }

}